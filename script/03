#!/bin/bash
FILE=".git/config"
remote='[remote "all"]'
repo_git="	url = git@github.com:Mundal1994/init.git"
has_all=0

while IFS= read -r line
do
	if [[ "$line" == "$remote" ]]; then
		echo "remote 'all' command: already exist"
		((has_all++))
	fi
done < "$FILE"

if [[ $has_all == 0 ]]; then
	while IFS= read -r line
	do
		if [[ "$line" == *"git@vogsphere-v2.hive.fi"* ]]; then
			repo_hive=$line
			printf "$remote\n$repo_hive\n$repo_git\n" >> $FILE
			echo "remote 'all' command: added"
			break
		fi
	done < "$FILE"
fi
